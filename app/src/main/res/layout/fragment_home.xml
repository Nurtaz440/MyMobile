<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.user.home.HomeFragment"
        >

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/uzmobile"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_main"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/deep_sky_blue_100"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    android:id="@+id/cv_logo_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="60dp"
                    app:srcCompat="@drawable/ic_uzmobile_logo"
                    tools:ignore="ContentDescription"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_call"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="16dp"
                    app:rippleColor="@color/deep_sky_blue_100"
                    >

                    <ImageView
                        android:id="@+id/iv_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="16dp"
                        app:srcCompat="@drawable/ic_call_calling"
                        app:tint="@color/deep_sky_blue_400"
                        tools:ignore="ContentDescription"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/call_center"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/call_center_number"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_balans"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="16dp"
                    app:rippleColor="@color/deep_sky_blue_100"
                    >

                    <ImageView
                        android:id="@+id/iv_ballans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="16dp"
                        app:srcCompat="@drawable/ic_wallet"
                        tools:ignore="ContentDescription"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="60dp"
                        android:text="@string/balans"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                </com.google.android.material.card.MaterialCardView>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_uzmobile"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_main"
            app:layout_goneMarginStart="16dp"
            app:rippleColor="@color/deep_sky_blue_100"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                app:srcCompat="@drawable/ic_uzmobile_logo"
                tools:ignore="ContentDescription"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_mobiuz"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/cv_uzmobile"
            app:layout_constraintTop_toBottomOf="@+id/cl_main"
            app:layout_goneMarginStart="16dp"
            app:rippleColor="@color/alizarin_100"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                app:srcCompat="@drawable/ic_mobiuz_logo"
                tools:ignore="ContentDescription"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ucell"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/cv_mobiuz"
            app:layout_constraintTop_toBottomOf="@+id/cl_main"
            app:layout_goneMarginStart="16dp"
            app:rippleColor="@color/vivid_violet_100"
            >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                app:srcCompat="@drawable/ic_ucell_logo"
                tools:ignore="ContentDescription"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_beeline"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/cv_ucell"
            app:layout_constraintTop_toBottomOf="@+id/cl_main"
            app:layout_goneMarginStart="16dp"
            app:rippleColor="@color/gorse_100"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                app:srcCompat="@drawable/ic_beeline_logo"
                tools:ignore="ContentDescription"
                />

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="416dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_beeline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_home"
            />

