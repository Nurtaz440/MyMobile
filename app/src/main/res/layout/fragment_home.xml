                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="23dp"
                android:text="@string/call_center_number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_balans_violet"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/ic_wallet"
                app:tint="@color/vivid_violet_800"
                tools:ignore="ContentDescription"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="18dp"
                android:text="@string/balans"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/gorse_100"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            app:srcCompat="@drawable/ic_beeline_logo"
            tools:ignore="ContentDescription"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_call_yellow"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/ic_call"
                app:tint="@color/gorse_600"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:text="@string/call_center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="23dp"
                android:text="@string/call_center_number"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_balans_yellow"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
